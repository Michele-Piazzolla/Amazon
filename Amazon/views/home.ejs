<h1 class="h1" >Benvenuto</h1><br>

  <div class="container">
    <div class="row">
      <% prodotti.forEach(prodotto => { %>
        <div class="col-md-4 mb-4">
          <div class="card bg-secondary h-100">
            <img src="<%= prodotto.immagine %>" class="card-img-top p-2">
            <div class="card-body">
              <h5><%= prodotto.nome %></h5>
              <p>â‚¬<%= prodotto.prezzo %></p>
              <div class="d-flex gap-2">
                <a href="/prodotto/<%= prodotto.id %>" class="btn btn-sm btn-info">Dettagli</a>
                <form method="POST" action="/aggiungi-carrello">
                  <input type="hidden" name="id" value="<%= prodotto.id %>">
                  <input type="hidden" name="nome" value="<%= prodotto.nome %>">
                  <input type="hidden" name="prezzo" value="<%= prodotto.prezzo %>">
                  <button type="submit" class="btn btn-sm btn-success">Compra</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>